{
  "name": "historian-reports",
  "version": "0.77.0",
  "description": "Professional reporting application for AVEVA Historian database",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:mock": "tsx watch src/dev-server.ts",
    "build": "node scripts/generate-build-metadata.js && tsc && tsc-alias",
    "build:electron": "tsc -p tsconfig.electron.json && tsc-alias -p tsconfig.electron.json",
    "build:client": "cd client && npm run build",
    "build:all": "npm run build && npm run build:electron && npm run build:client",
    "start": "node dist/server.js",
    "start:dev": "concurrently \"npm run dev\" \"cd client && npm start\"",
    "start:dev:mock": "concurrently \"npm run dev:mock\" \"cd client && npm start\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:property": "jest --testNamePattern='Property'",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker buildx build --platform linux/amd64,linux/arm64 -t historian-reports .",
    "docker:dev": "docker-compose up --build",
    "setup:db": "tsx scripts/setup-database-configs.ts",
    "test:db": "tsx scripts/test-database-connections.ts",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build:all && electron-builder",
    "electron:build:win": "npm run build:all && electron-builder --win",
    "electron:build:mac": "npm run build:all && electron-builder --mac",
    "electron:build:all": "npm run build:all && electron-builder -mw"
  },
  "keywords": [
    "historian",
    "reporting",
    "aveva",
    "time-series",
    "industrial"
  ],
  "author": "Ricardo A",
  "license": "MIT",
  "dependencies": {
    "@types/redis": "^4.0.10",
    "adm-zip": "^0.5.16",
    "bcrypt": "^5.1.1",
    "call-bind-apply-helpers": "^1.0.1",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "dunder-proto": "^1.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "get-intrinsic": "^1.2.4",
    "get-proto": "^1.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.14.0",
    "redis": "^5.10.0",
    "side-channel": "^1.1.0",
    "sqlite3": "^5.1.6",
    "uuid": "^10.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/bcrypt": "^5.0.1",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mssql": "^9.1.4",
    "@types/node": "^20.8.9",
    "@types/node-cron": "^3.0.9",
    "@types/nodemailer": "^6.4.13",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.12.12",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^9.2.1",
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.52.0",
    "fast-check": "^3.13.2",
    "jest": "^29.7.0",
    "pdf-parse": "^2.4.5",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.historianreports.app",
    "productName": "Historian Reports",
    "directories": {
      "buildResources": "assets",
      "output": "dist/electron"
    },
    "files": [
      "!dist/electron/**/*",
      "dist/**/*",
      "client/build/**/*",
      "data/**/*",
      "templates/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Historian Reports"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150,
          "type": "file"
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}