{
  "name": "kagome-reports",
  "version": "1.0.0",
  "description": "Professional reporting application for AVEVA Historian database",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:property": "jest --testNamePattern='Property'",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker buildx build --platform linux/amd64,linux/arm64 -t kagome-reports .",
    "docker:dev": "docker-compose up --build"
  },
  "keywords": ["historian", "reporting", "aveva", "time-series", "industrial"],
  "author": "Ricardo A",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "mssql": "^10.0.1",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.14.0",
    "handlebars": "^4.7.8",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/compression": "^1.7.4",
    "@types/mssql": "^9.1.4",
    "@types/bcrypt": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/nodemailer": "^6.4.13",
    "@types/pdfkit": "^0.12.12",
    "@types/node-cron": "^3.0.9",
    "@types/jest": "^29.5.7",
    "typescript": "^5.2.2",
    "tsx": "^4.1.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "fast-check": "^3.13.2",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}